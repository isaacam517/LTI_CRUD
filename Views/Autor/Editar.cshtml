@model Autor

@{
    ViewData["Title"] = "Editar Autor";
}

<form method="POST" asp-action="Editar">
    <p>
        <input type="hidden" asp-for="Id">
    </p>
    <p>
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome">
    </p>
    <p>
        <label asp-for="DataNascimento">Data Nascimento</label>
        <input asp-for="DataNascimento">
    </p>
    @* 
    AQUI TEM QUE TROCAR PRO ALGUM CHECK BOX
    E MOSTRAR OS LIVROS DO AUTOR
    *@
     <p>
        <label asp-for="NomeLivro">Livros</label>
        <input asp-for="NomeLivro">
    </p>
    <p>
        <input type="submit" value="Salvar Edição">
    </p>
</form>

<p>
    @ViewBag.Mensagem
</p>